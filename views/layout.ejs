<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Steam Games</title>
    <link rel='stylesheet' href='/css/foundation.min.css' />
    <link rel='stylesheet' href='/css/main.css' />
  </head>
  <body>
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1><a href="/">Steam Game Randomizer</a></h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
      </ul>

      <section class="top-bar-section">
        <ul class="right">
          <% if(!userLogged) { %>
          <li>
            <a class="steam-group-button" href="/auth/steam">
              <img src="//cdn.steampowered.com/favicon.ico">
              <i class="steam-group-icon"></i>
              <span class="steam-group-label">Sign in through steam</span>
            </a>
          </li>
          <% } else { %>
          <li>
            <a class="steam-group-button" href="/logout">
              <img src="<%= user.avatar %>">
              <span class="steam-group-label">Logout</span>
            </a>
          </li>
          <% } %>
        </ul>
      </section>
    </nav>

    <%- body %>
    <div class="github-fork-ribbon">
        <a href="https://github.com/DPr00f/SteamRandomizer" target="_blank">Fork me on GitHub</a>
    </div>
    <script type="text/javascript" src='/js/jquery-1.11.2.min.js'></script>
    <script type="text/javascript" src='/js/fastclick.js'></script>
    <script type="text/javascript" src='/js/foundation.min.js'></script>
    <script type="text/javascript" src='/js/main.js'></script>
  </body>
</html>